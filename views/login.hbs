<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#register">Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if loginError}}
      <div class="card-panel white-text #e53935 red darken-1">{{loginError}}</div>
      {{/if}}
      <h1>Login</h1>
      <form action="/login" method="POST">
        <div class="input-field">
          <input id="email" name="email" type="email" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Enter your email"></span>
        </div>

        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Enter your password"></span>
        </div>
        <button class="btn btn-primary" type="submit">Login</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if registerError}}
      <div class="card-panel white-text #e53935 red darken-1">{{registerError}}</div>
      {{/if}}
      <h1>Create account</h1>
      <form action="/register" method="POST">
        <div class="input-field">
          <input id="remail" name="email" type="email" class="validate" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Enter your email"></span>
        </div>

        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required>
          <label for="name">Name</label>
          <span class="helper-text" data-error="Enter your name"></span>
        </div>

        <div class="input-field">
          <input id="rpassword" name="password" type="password" class="validate" required>
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Enter your password"></span>
        </div>

        <button class="btn btn-primary" type="submit">Register</button>
      </form>
    </div>
  </div>
</div>